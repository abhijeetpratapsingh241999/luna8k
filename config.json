{
  "application": {
    "name": "Phone-PC Sync Emulator Pro",
    "version": "1.0.0",
    "author": "Sync Emulator Team",
    "description": "Advanced Phone-PC Synchronization Software"
  },
  "server": {
    "host": "localhost",
    "port": 5000,
    "debug": false,
    "encryption_enabled": true,
    "max_connections": 10,
    "timeout": 30
  },
  "gui": {
    "theme": "dark",
    "color_scheme": "blue",
    "window_size": {
      "width": 1200,
      "height": 800
    },
    "auto_connect": true,
    "show_notifications": true
  },
  "sync": {
    "auto_sync_enabled": true,
    "sync_frequency": 300,
    "backup_enabled": true,
    "conflict_resolution": "manual",
    "max_file_size": 104857600,
    "supported_file_types": [
      ".jpg", ".jpeg", ".png", ".gif", ".bmp",
      ".mp4", ".avi", ".mov", ".mkv",
      ".mp3", ".wav", ".aac", ".flac",
      ".pdf", ".doc", ".docx", ".txt", ".xlsx",
      ".zip", ".rar", ".7z"
    ]
  },
  "devices": {
    "max_devices": 5,
    "simulation_enabled": true,
    "battery_simulation": true,
    "usage_simulation": true,
    "default_device_types": ["Android", "iOS"],
    "auto_generate_data": true
  },
  "logging": {
    "level": "INFO",
    "file_logging": true,
    "console_logging": true,
    "max_log_size": 10485760,
    "backup_count": 5
  },
  "security": {
    "encryption_algorithm": "Fernet",
    "key_rotation_enabled": false,
    "secure_connection_only": false,
    "authentication_required": false
  },
  "performance": {
    "max_concurrent_transfers": 3,
    "chunk_size": 8192,
    "compression_enabled": true,
    "cache_enabled": true,
    "cache_size_mb": 100
  }
}